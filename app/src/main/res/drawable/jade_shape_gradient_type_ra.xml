<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#444444"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#424242"
                android:gradientRadius="25dp"
                android:startColor="#ffffff"
                android:type="radial" />
        <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#444444"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#424242"
                android:gradientRadius="25dp"
                android:startColor="#ffffff"
                android:type="radial" /> <corners android:radius="2dp" />
            <stroke android:width="2dp" android:color="#46AAFF" />
            <corners android:radius="2dp" />

        </shape>
    </item>
</selector>
