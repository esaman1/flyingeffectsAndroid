<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_base_balk_color">


    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@mipmap/back"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/ll_Matting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能抠图"
                android:textColor="@color/white" />


            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginStart="9dp"
                app:sb_border_width="@dimen/dp_2"
                app:sb_button_color="@color/home_base_blue_color"
                app:sb_checked="true"
                app:sb_checked_color="@color/base_black"
                app:sb_checkline_color="@color/base_black"
                app:sb_show_indicator="false"
                app:sb_uncheckcircle_radius="@dimen/dp_0"
                app:sb_uncheckcircle_width="0dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_top_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp_size" />


    </RelativeLayout>


    <View
        android:id="@+id/ll_test"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="89dp" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_progress"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />


    <com.lansosdk.videoeditor.DrawPadView
        android:id="@+id/drawPadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_progress"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_progress"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">



            <com.lansosdk.box.ViewLayerRelativeLayout
                android:id="@+id/id_vview_realtime_gllayout"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">


                <com.flyingeffects.com.view.lansongCommendView.StickerView
                    android:id="@+id/id_vview_drawimage_stickview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerInParent="true" />


            </com.lansosdk.box.ViewLayerRelativeLayout>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/viewPager"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:layout_marginStart="13dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/iv_play" />


        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:clipToPadding="false"
                android:paddingStart="@dimen/dp_63"
                android:paddingEnd="@dimen/dp_63" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>


    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_above="@+id/tv_tiezhi" />


    <TextView
        android:id="@+id/tv_tiezhi"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="贴纸"
        android:textColor="@color/white" />


</RelativeLayout>