<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_base_balk_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@mipmap/back"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/ll_Matting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能抠图"
                android:textColor="@color/white" />


            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginStart="9dp"
                app:sb_border_width="@dimen/dp_2"
                app:sb_button_color="@color/home_base_blue_color"
                app:sb_checked="true"
                app:sb_checked_color="@color/base_black"
                app:sb_checkline_color="@color/base_black"
                app:sb_show_indicator="false"
                app:sb_uncheckcircle_radius="@dimen/dp_0"
                app:sb_uncheckcircle_width="0dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_top_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp_size" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_progress"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/app_name" />


    <com.lansosdk.videoeditor.DrawPadView
        android:id="@+id/drawPadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp"
        />


    <com.flyingeffects.com.view.EmptyControlVideo
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_progress"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp"
        android:visibility="gone" />

    <com.lansosdk.box.ViewLayerRelativeLayout
        android:id="@+id/id_vview_realtime_gllayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_progress"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent">

<!--        <com.flyingeffects.com.view.lansongCommendView.ImageTouchView-->
<!--            android:id="@+id/switcher"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_gravity="center"-->
<!--            android:scaleType="matrix" />-->

        <com.flyingeffects.com.view.StickerView
            android:id="@+id/id_vview_drawimage_stickview"
            android:layout_width="match_parent"
            app:sv_left_top_drawable="@drawable/sticker_delete"
            app:sv_left_bottom_drawable="@mipmap/sticker_change"
            app:sv_right_top_drawable="@mipmap/sticker_copy"
            app:sv_right_bottom_drawable="@mipmap/sticker_redact"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

<!--        <com.flyingeffects.com.view.lansongCommendView.TextStickerView-->
<!--            android:id="@+id/id_vview_drawimage_textstickview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_centerInParent="true" />-->
    </com.lansosdk.box.ViewLayerRelativeLayout>

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/viewPager"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:layout_marginStart="13dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/iv_play" />


        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/tv_end_time"
                android:max="100"
                android:maxHeight="2dp"
                android:progress="0"
                android:progressDrawable="@drawable/bg_adjust_seek_bar"
                android:thumb="@drawable/seek_bar_thumb" />


            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>


    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_above="@+id/tv_tiezhi" />


    <TextView
        android:id="@+id/tv_tiezhi"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="贴纸"
        android:textColor="@color/white" />


