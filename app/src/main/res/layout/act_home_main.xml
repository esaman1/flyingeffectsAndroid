<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relayout_fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rL_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:background="@color/white" />


    <RelativeLayout
        android:id="@+id/rela_bottom"
        android:layout_width="match_parent"
        android:background="#101010"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lL_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_menu_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iV_menu_0"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/home_bj" />

                <TextView
                    android:id="@+id/tv_main_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="背景"
                    android:textColor="@color/home_base_blue_color"
                    android:textSize="@dimen/text_micro_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iV_menu_1"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/moban_unslect" />

                <TextView
                    android:id="@+id/tv_main_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模板"
                    android:textColor="@color/home_navigation_dark_gray"
                    android:textSize="@dimen/text_micro_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iV_menu_2"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/chazhao_unselect" />

                <TextView
                    android:id="@+id/tv_main_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textColor="@color/home_navigation_dark_gray"
                    android:textSize="@dimen/text_micro_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_menu_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iV_menu_3"
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/wode_unselect" />

                <TextView
                    android:id="@+id/tv_main_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/home_navigation_dark_gray"
                    android:textSize="@dimen/text_micro_size" />
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>