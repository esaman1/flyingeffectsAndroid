<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="#90000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/iv_to_other_app"
        android:layout_width="match_parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_centerInParent="true"
        android:layout_height="310dp">

        <ImageView
            android:id="@+id/iv_show_bg"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/into_other_app"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:textSize="22sp"
            android:textColor="#111235"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_title_1"
            android:layout_below="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            android:textColor="#3A3A3A"
            android:layout_height="wrap_content"/>




        <TextView
            android:id="@+id/tv_tencent"
            android:layout_below="@+id/tv_title_1"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textSize="20sp"
            android:textColor="#00A9ED"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_content"
            android:layout_below="@+id/tv_tencent"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#122B31"
            android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_goto_kuaishou"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_goto_douyin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    </RelativeLayout>




    <ImageView
        android:id="@+id/iv_close"
        android:layout_below="@+id/iv_to_other_app"
        android:layout_width="43dp"
        android:padding="5dp"
        android:src="@mipmap/close_other_app"
        android:layout_centerHorizontal="true"
        android:layout_height="43dp"
        />



</RelativeLayout>