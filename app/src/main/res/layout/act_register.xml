<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="@mipmap/iv_top_back" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_email_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="邮箱号注册"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />


        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="20dp"
            android:background="#333333" />


        <TextView
            android:id="@+id/tv_user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="用户名注册"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_password"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您需要注册的邮箱号"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingStart="10dip"
                android:paddingLeft="15dip"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/text_small_size" />


            <TextView
                android:id="@+id/tv_send_msm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="获取验证码"
                android:textColor="#298DF8"
                android:textSize="14sp" />

        </LinearLayout>


        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_password"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_verification"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <EditText
                android:id="@+id/ed_confirm_email"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您收到的验证码"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingStart="10dip"
                android:paddingLeft="15dip"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_password"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的密码"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingStart="10dip"
                android:paddingLeft="15dip"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_password"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请确认您的密码"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingStart="10dip"
                android:paddingLeft="15dip"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_password"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请填写你的邀请码(非必填)"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingStart="10dip"
                android:paddingLeft="15dip"
                android:paddingEnd="10dip"
                android:paddingRight="10dip"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="已有账号立即登录"
        android:textColor="#298DF8" />


</LinearLayout>