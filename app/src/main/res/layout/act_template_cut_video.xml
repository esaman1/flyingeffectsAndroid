<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/ll_top"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_kt"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:text="去抠图"
            android:layout_height="wrap_content"/>



    </RelativeLayout>




    <RelativeLayout
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:padding="16dp">


<!--        <com.google.android.exoplayer2.ui.PlayerView-->
<!--            android:id="@+id/exo_player"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:background="#1D1D1D"-->
<!--            app:surface_type="texture_view"-->
<!--            app:use_controller="false" />-->


        <com.flyingeffects.com.view.EmptyControlVideo
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_243"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/error" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/slide_choose_range"
                android:textColor="#808080" />

            <ImageView
                android:id="@+id/iv_correct"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/dp_10"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/correct" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="5s"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/dp_10"-->
                <!--                    android:layout_height="@dimen/dp_13"-->
                <!--                    android:layout_marginStart="@dimen/dp_15"-->
                <!--                    android:layout_marginEnd="@dimen/dp_10"-->
                <!--                    android:src="@mipmap/play" />-->


                <RelativeLayout
                    android:id="@+id/time_line"
                    android:layout_width="match_parent"
                    android:layout_height="64dp">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_thumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/dp_63"
                        android:paddingEnd="@dimen/dp_63" />

                    <RelativeLayout
                        android:id="@+id/relative_select_duration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_63"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/dp_64"
                        android:layout_marginBottom="2dp">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke_all_in_slow_select" />


<!--                        <TextView-->
<!--                            android:id="@+id/iv_in_slow"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:background="@drawable/stroke_all_in_slow"-->
<!--                            android:contentDescription="@string/app_name"-->
<!--                            android:gravity="center"-->
<!--                            android:text="@string/in_show_template"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:visibility="gone" />-->



                        <View
                            android:id="@+id/view_line_progress"
                            android:layout_width="@dimen/dp_1"
                            android:background="#FFE131"
                            android:layout_height="match_parent"/>


                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>