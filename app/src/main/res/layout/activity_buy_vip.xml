<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_vip_page_back">

    <include layout="@layout/view_common_title" />

    <View
        android:id="@+id/v_user_back"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@mipmap/bg_vip_page_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_title_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_29"
        app:layout_constraintStart_toStartOf="@id/v_user_back"
        app:layout_constraintTop_toTopOf="@id/v_user_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:textColor="@color/color_vip_price_list_text_checked"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_user_id"
        app:layout_constraintEnd_toStartOf="@id/tv_is_open"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/color_vip_price_list_text_checked"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_is_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/color_vip_price_list_text_checked"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:layout_constraintEnd_toEndOf="@id/v_user_back"
        app:layout_constraintTop_toTopOf="@id/tv_user_name" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/color_vip_line"
        app:layout_constraintBottom_toTopOf="@id/tv_vip_intro"
        app:layout_constraintEnd_toEndOf="@id/v_user_back"
        app:layout_constraintStart_toStartOf="@id/v_user_back"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_vip_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="开通会员全场无广告，享受会员专属模板 >"
        android:textColor="@color/color_vip_price_list_text_checked"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/v_user_back"
        app:layout_constraintStart_toStartOf="@id/iv_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_vip_privilege_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="VIP会员尊享特权"
        android:textColor="@color/color_vip_title_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_user_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vip_privilege"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/v_middle_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vip_privilege_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="购买遇到问题？"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_open_vip"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/shape_buy_vip_button"
        android:gravity="center"
        android:text="立即开通"
        android:textColor="#544435"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@id/tv_problem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tv_open_vip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:drawableStart="@mipmap/ic_wechat"
            android:drawablePadding="@dimen/dp_5"
            android:text="微信支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <RadioButton
            android:id="@+id/rb_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@mipmap/ic_alipay"
            android:drawablePadding="@dimen/dp_5"
            android:text="支付宝支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cost_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@id/radio_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_middle_line" />

    <View
        android:id="@+id/v_middle_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_10"
        android:background="#262424"
        app:layout_constraintBottom_toTopOf="@id/rv_cost_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_vip_privilege" />

</androidx.constraintlayout.widget.ConstraintLayout>