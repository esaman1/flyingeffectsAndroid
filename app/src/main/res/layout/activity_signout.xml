<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.view.activity.SignoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/view_top"/>


        <LinearLayout
            android:paddingHorizontal="@dimen/dp_20"
            android:id="@+id/ll_signout_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_signout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_23">

                <ImageView
                    android:id="@+id/singout_symbol"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/dp_3"
                    android:src="@mipmap/icon_signout_ex" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/string_cancel_user_after"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_20sp_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/string_delete_user_after_one" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="13sp"
                    android:textColor="#686868"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/string_delete_user_after_two" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#686868"
                    android:layout_gravity="left"
                    android:text="@string/string_delete_user_after_shree" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:textColor="#686868"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp_40">

                    <CheckBox
                        android:id="@+id/check_box"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:button="@null"
                        android:focusable="true"
                        android:paddingRight="@dimen/dp_10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/string_delete_user_iknow"
                        android:layout_marginStart="10dp"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/bt_write_off"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:background="@drawable/button_signout"
                android:text="@string/string_to_delete"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>