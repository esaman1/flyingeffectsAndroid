<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:tl_divider_padding="@dimen/dp_5"
            app:tl_indicator_color="#ff0000"
            app:tl_indicator_corner_radius="@dimen/dp_5"
            app:tl_indicator_height="@dimen/dp_6"
            app:tl_indicator_width="@dimen/dp_12"
            app:tl_tab_padding="@dimen/dp_7"
            app:tl_textAllCaps="true"
            app:tl_textBold="BOTH"
            app:tl_textSelectColor="#FF0000"
            app:tl_textUnselectColor="#BBBBBB"
            app:tl_textsize="@dimen/sp_16" />


        <ImageView
            android:id="@+id/column_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/more" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_into_search"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="18dp"

            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#00000000"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/home_head_search" />

            <TextView
                android:id="@+id/tv_home_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#00000000"
                android:text="搜索"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/text_micro_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/filtrate" />


            <TextView
                android:id="@+id/tv_filtrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:text="筛选" />

        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:layout_marginTop="15dp"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>