<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_black">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:background="#181818"
            android:fitsSystemWindows="true"
            android:minHeight="50dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


            <RelativeLayout
                android:id="@+id/ll_expand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="113dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@mipmap/create_matting_video" />


                        <LinearLayout
                            android:id="@+id/ll_click_create_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="6dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_add"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY"
                                android:src="@mipmap/bj_add_write" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_add"
                                android:layout_marginTop="9dp"
                                android:text="创作抠视频"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="113dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="113dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@mipmap/create_photo_graph_album" />


                        <LinearLayout
                            android:id="@+id/ll_crate_photograph_album"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY"
                                android:src="@mipmap/create_photo_graph_album_icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_add"
                                android:layout_marginTop="9dp"
                                android:gravity="center"
                                android:text="创作影集"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>



                <include layout="@layout/view_mask" android:id="@+id/view_top" />


            </RelativeLayout>


            <!--            <ImageView-->
            <!--                android:id="@+id/iv_cover"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:fitsSystemWindows="true"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                android:src="@mipmap/bj_head"-->
            <!--                app:layout_collapseMode="parallax" />-->


            <Toolbar
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_gravity="center"
                app:layout_collapseMode="pin">


                <RelativeLayout
                    android:id="@+id/ll_close"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:id="@+id/ll_matting_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/create_bj_green_title"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="7dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@mipmap/bj_add_write" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="创作扣视频"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_toEndOf="@+id/ll_matting_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/create_bj_gray_title"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="7dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@mipmap/create_photo_graph_album_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="创作影集"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                    </LinearLayout>



                </RelativeLayout>



            </Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#181818">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingEnd="80dp">

                <LinearLayout
                    android:id="@+id/ll_add_child"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />
            </HorizontalScrollView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/search_gradient" />


            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/search" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


