<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/home_base_balk_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="70dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_height="70dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:text="我的id号"
            android:layout_height="wrap_content"/>


    </LinearLayout>






    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_tabs"
        android:layout_width="match_parent"
        app:tl_indicator_color="#FEE131"
        app:tl_textBold="BOTH"
        app:tl_textsize="@dimen/sp_16"
        app:tl_textAllCaps="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        android:layout_height="@dimen/dp_40"
        app:tl_divider_padding="@dimen/dp_5"
        app:tl_indicator_corner_radius="@dimen/dp_5"
        app:tl_indicator_height="@dimen/dp_6"
        app:tl_indicator_width="@dimen/dp_12"
        app:tl_tab_padding="@dimen/dp_7"
        app:tl_textUnselectColor="#BBBBBB"
        app:tl_textSelectColor="@color/base_black"
        />



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>