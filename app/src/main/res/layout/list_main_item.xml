<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <LinearLayout
        android:id="@+id/ll_content_patents"
        android:layout_width="match_parent"
        android:background="@drawable/template_item_bj"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="11dp"
        android:layout_height="wrap_content">

        <include layout="@layout/view_join_us" />


        <include layout="@layout/view_add_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relative_parents"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_235"
               >


                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    />


            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_show_author"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-16dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/app_name"
                android:layout_width="32dp"
                android:layout_below="@+id/relative_parents"
                android:layout_height="32dp"/>


            <TextView
                android:layout_below="@+id/relative_parents"
                android:id="@+id/tv_name"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="@string/app_name"
                android:layout_height="wrap_content"/>


            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_name"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_show_author_template"
                    android:contentDescription="@string/app_name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/tv_name2"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_zan_state"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/app_name"
                    android:layout_width="16dp"
                    android:src="@mipmap/zan_clicked"
                    android:layout_height="16dp"/>



                <TextView
                    android:id="@+id/tv_zan_count"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="1dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>




            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>



    <!--广点通-->
    <include layout="@layout/item_ad_unified" />


    <!--穿山甲-->
    <include layout="@layout/csj_ad_container" />



</RelativeLayout>

