<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/download_bj"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="113dp">



        <LinearLayout
            android:id="@+id/ll_share_wx"
            android:layout_width="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView

                android:layout_width="wrap_content"
                android:src="@mipmap/icon_wx"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="分享给好友"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_circle"
            android:layout_width="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView

                android:layout_width="wrap_content"
                android:src="@mipmap/icon_friend_circle"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="分享到朋友圈"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView

                android:layout_width="wrap_content"
                android:src="@mipmap/download_bj_icon"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="保存至相册"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_report"
            android:layout_width="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView

                android:layout_width="wrap_content"
                android:src="@mipmap/report"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="举报"
                />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#2A2A2A"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>