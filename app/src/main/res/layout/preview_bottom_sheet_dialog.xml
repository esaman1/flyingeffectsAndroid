<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/download_bj"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"

        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">


        <LinearLayout
            android:id="@+id/ll_share_wx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_wx" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="分享给好友"
                android:textColor="#A3A3A5"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_friend_circle" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="分享到朋友圈"
                android:textColor="#A3A3A5"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/download_bj_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="保存至相册"
                android:textColor="#A3A3A5"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">


        <LinearLayout
            android:id="@+id/ll_share_sc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/new_version_collect" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="分享给好友"
                android:textColor="#A3A3A5"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_photograph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/photograph" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="拍同款"
                android:textColor="#A3A3A5"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_report"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/report" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="举报"
                android:textColor="#A3A3A5"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#181818"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>