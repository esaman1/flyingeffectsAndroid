        <TextView
            android:id="@+id/tv_add_music"
            android:layout_width="95dp"
            android:textSize="16sp"
            android:text="添加音乐"
            android:background="@drawable/add_music"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="60dp"/>

    </LinearLayout>


