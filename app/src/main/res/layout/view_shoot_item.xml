<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/constraintLayout"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_rolling_over"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/shoot_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_rolling_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_11"
        android:gravity="center"
        android:text="翻转"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/iv_rolling_over"
        app:layout_constraintStart_toStartOf="@+id/iv_rolling_over"
        app:layout_constraintTop_toBottomOf="@+id/iv_rolling_over" />


    <ImageView
        android:id="@+id/iv_shoot_filter"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/shoot_filter"
        app:layout_constraintEnd_toEndOf="@+id/tv_rolling_over"
        app:layout_constraintStart_toStartOf="@+id/tv_rolling_over"
        app:layout_constraintTop_toBottomOf="@+id/tv_rolling_over" />


    <TextView
        android:id="@+id/tv_shoot_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:text="滤镜"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/iv_shoot_filter"
        app:layout_constraintStart_toStartOf="@+id/iv_shoot_filter"
        app:layout_constraintTop_toBottomOf="@+id/iv_shoot_filter" />


    <ImageView
        android:id="@+id/iv_shoot_beautify"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        android:src="@mipmap/shoot_beautify"
        app:layout_constraintEnd_toEndOf="@+id/tv_shoot_filter"
        app:layout_constraintStart_toStartOf="@+id/tv_shoot_filter"
        app:layout_constraintTop_toBottomOf="@+id/tv_shoot_filter" />


    <TextView
        android:id="@+id/tv_shoot_beautify"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="美化"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/iv_shoot_beautify"
        app:layout_constraintStart_toStartOf="@+id/iv_shoot_beautify"
        app:layout_constraintTop_toBottomOf="@+id/iv_shoot_beautify" />


    <ImageView
        android:id="@+id/iv_count_down"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/cout_down_3"
        app:layout_constraintEnd_toEndOf="@+id/tv_shoot_beautify"
        app:layout_constraintStart_toStartOf="@+id/tv_shoot_beautify"
        app:layout_constraintTop_toBottomOf="@+id/tv_shoot_beautify" />


    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:text="倒计时"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/iv_count_down"
        app:layout_constraintStart_toStartOf="@+id/iv_count_down"
        app:layout_constraintTop_toBottomOf="@+id/iv_count_down" />

</androidx.constraintlayout.widget.ConstraintLayout>