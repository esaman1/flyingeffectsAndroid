<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/sxve_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <RadioGroup
            android:id="@+id/rg_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_text_content"
                style="@style/sxve_video_clip_checkbox"
                android:layout_height="24dp"
                android:checked="true"
                android:text="内容" />

            <RadioButton
                android:id="@+id/rb_text_font"
                style="@style/sxve_video_clip_checkbox"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="字体" />

            <RadioButton
                android:id="@+id/rb_text_color"
                style="@style/sxve_video_clip_checkbox"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="样式" />
        </RadioGroup>

        <Button
            android:id="@+id/confirm"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sxve_bg_edit_done"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/sxve_black" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <com.shixing.sxve.ui.view.CounterEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/sxve_bg_edit_text"
                android:maxLines="3"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/sxve_black"
                android:textSize="17sp" />

            <View
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="370dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/font_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/style_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字体颜色"
                    android:textColor="@color/sxve_white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/text_color_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描边颜色"
                    android:textColor="@color/sxve_white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/text_stroke_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描边粗细"
                    android:textColor="@color/sxve_white" />

                <SeekBar
                    android:id="@+id/sb_stroke_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>