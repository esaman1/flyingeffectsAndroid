<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SXVE" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/sxve_window_background</item>
    </style>

    <style name="sxve_video_clip_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/sxve_bg_video_clip_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/sxve_video_clicp_checkbox</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="sxve_progress_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
